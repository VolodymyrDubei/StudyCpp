#include <iostream>
using namespace std;

int main()
{
	int counter = 0;
	cout << "How many hellos?: ";
	cin >> counter;
	while (counter > 0)
	{
    	cout << "Hello!\n";
    	counter--;
	}
	cout << "Counter is: " << counter << endl;
	return 0;
}
////
How many hellos?: 2
Hello!
Hello!
Counter is: 0

How many hellos?: 0
Counter is: 0

