#include <iostream>
using namespace std;

int Area(int length, int width); // прототип функції

int main()
{
	int lengthOfYard;
	int widthOfYard;
	int areaOfYard;

	cout << "\nHow wide is your yard? ";
	cin >> widthOfYard;
	cout << "\nHow long is your yard? ";
	cin >> lengthOfYard;

	areaOfYard = Area(lengthOfYard, widthOfYard);

	cout << "\nYour yard is ";
	cout << areaOfYard;
	cout << " square meters\n\n";

	return 0;
}

int Area(int yardLength, int yardWidth)
{
	return yardLength * yardWidth;
}
////
How wide is your yard? 100

How lond is your yard? 200

Your yard is 20000 square meters

