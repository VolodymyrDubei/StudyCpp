#include <iostream>
using namespace std;

inline int Double(int);

int main()
{
	int target;

	cout << "Enter a number to work with: ";
	cin >> target;
	cout << endl;

	target = Double(target);
	cout << "Target: " << target << endl;

	target = Double(target);
	cout << "Target: " << target << endl;

	target = Double(target);
	cout << "Target: " << target << endl;
	return 0;
}
int Double(int target)
{
	return 2 * target;
}
////
Enter a number to work with: 20

Target: 40
Target: 80
Target: 160

